@model WebApplication3.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="bg-light p-5 rounded shadow">
                <h2 class="text-primary text-center mb-4">🔐 Forgot Your Password?</h2>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info text-center">@TempData["Message"]</div>
                }

                @using (Html.BeginForm("ForgotPassword", "Teacher", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Enter your registered email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-envelope me-2"></i>Send Reset Link
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
