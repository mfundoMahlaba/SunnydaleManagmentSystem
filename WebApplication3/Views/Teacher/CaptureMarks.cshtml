@model WebApplication3.ViewModels.CaptureSingleMarkViewModel

<style>
    h4 {
        font-weight: 700;
        color: #212529;
    }

    label {
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        font-size: 0.95rem;
        border-radius: 0.375rem;
    }

    .form-control-plaintext {
        font-size: 0.95rem;
        padding: 0.5rem 0.75rem;
        background-color: #f8f9fa;
        border-radius: 0.375rem;
        border: 1px solid #dee2e6;
    }

    .btn {
        font-size: 0.9rem;
        font-weight: 500;
        border-radius: 0.375rem;
    }

    .btn-success {
        padding: 0.5rem 1.25rem;
    }

    .btn-secondary {
        margin-left: 0.5rem;
    }

    .alert {
        font-size: 0.95rem;
        border-radius: 0.375rem;
        padding: 0.75rem 1rem;
    }

    .text-danger {
        font-size: 0.85rem;
    }

    .container {
        padding-bottom: 2rem;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-dark fw-bold">📝 Capture Mark</h4>
            <a href="@Url.Action("Dashboard", "Teacher")" class="btn btn-outline-secondary">
                <i class="fas fa-home me-1"></i> Back to Dashboard
            </a>
        </div>
        <div class="card-body">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            }

            @using (Html.BeginForm("CaptureMarks", "Teacher", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.StudentId)
                @Html.HiddenFor(m => m.SubjectId)
                @Html.HiddenFor(m => m.GradeId)
                @Html.Hidden("IsOverwriteConfirmed", "false")

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label>Student</label>
                        <div class="form-control-plaintext">@Model.StudentName</div>
                    </div>
                    <div class="col-md-4">
                        <label>Subject</label>
                        <div class="form-control-plaintext">@Model.SubjectName</div>
                    </div>
                    <div class="col-md-4">
                        <label>Grade</label>
                        <div class="form-control-plaintext">@Model.GradeName</div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.SelectedTerm)
                        @Html.DropDownListFor(m => m.SelectedTerm, Model.Terms, "Select Term", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.SelectedTerm, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(m => m.AssessmentType)
                        @Html.DropDownListFor(m => m.AssessmentType, Model.AssessmentTypes, "Select Type", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.AssessmentType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Mark)
                    @Html.TextBoxFor(m => m.Mark, new
                    {
                        @class = "form-control",
                        type = "number",
                        min = "0",
                        max = "100",
                        step = "0.1",
                        placeholder = "Enter mark"
                    })
                    @Html.ValidationMessageFor(m => m.Mark, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex gap-2 mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> Save Mark
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('form').submit(function (e) {
            var existingMark = '@Model.ExistingMark';
            var isConfirmed = $('#IsOverwriteConfirmed').val();

            if (existingMark && isConfirmed !== "true") {
                e.preventDefault();
                if (confirm("This student already has a mark for this term and assessment type. Do you want to overwrite it?")) {
                    $('#IsOverwriteConfirmed').val("true");
                    $(this).submit();
                }
            }
        });
    </script>
}
