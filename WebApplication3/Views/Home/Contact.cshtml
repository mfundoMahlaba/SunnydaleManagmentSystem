@{
    ViewBag.Title = "Contact";
}

<main aria-labelledby="title" class="contact-page">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h1 id="title" class="contact-title">Contact Us</h1>
                <p class="contact-subtitle">Get in touch with Sunnydale Secondary School</p>
            </div>
        </div>

        <div class="row">
            <!-- Contact Information -->
            <div class="col-lg-6 mb-5">
                <div class="contact-info-card">
                    <h3 class="info-section-title">Contact Information</h3>

                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Contact Number</h4>
                            <p>035 474 1236</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Email Address</h4>
                            <p>sunnydale-ss@kznschools.gov.za</p>
                        </div>
                    </div>

                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-details">
                            <h4>Physical Address</h4>
                            <p>23 Salberg Road, Sunnydale,<br>Eshowe 3815</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="col-lg-6 mb-5">
                <div class="contact-form-card">
                    <h3 class="info-section-title">Contact Form</h3>

                    <form id="contactForm">
                        <div class="form-group mb-3">
                            <label for="name" class="form-label">Name & surname</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your full name" required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="phone" class="form-label">Contact Number</label>
                            <input type="tel" class="form-control" id="phone" placeholder="Enter your contact number" required>
                        </div>

                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" placeholder="Enter your email address" required>
                        </div>

                        <div class="form-group mb-4">
                            <label for="message" class="form-label">Message/ Comments</label>
                            <textarea class="form-control" id="message" rows="5" placeholder="Enter your message or comments" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-submit" id="submitBtn">
                            <span id="submitText">Submit</span>
                            <div id="submitSpinner" class="spinner-border spinner-border-sm d-none" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Success Popup Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content success-modal">
            <div class="modal-body text-center p-5">
                <div class="success-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h3 class="success-title">Message Sent Successfully!</h3>
                <p class="success-message">
                    Thank you for contacting Sunnydale Secondary School. We have received your message
                    and will get back to you as soon as possible.
                </p>
                <p class="success-email-note">
                    <i class="fas fa-envelope me-2"></i>
                    A confirmation email has been sent to your inbox.
                </p>
                <button type="button" class="btn btn-success-btn" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<style>
    /* Existing styles remain the same */
    .contact-page {
        padding: 80px 0;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
    }

    .contact-title {
        font-size: 3rem;
        font-weight: 700;
        color: #0056b3;
        margin-bottom: 1rem;
        font-family: 'Space Grotesk', sans-serif;
    }

    .contact-subtitle {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 3rem;
    }

    .contact-info-card,
    .contact-form-card {
        background: white;
        border-radius: 15px;
        padding: 2.5rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border: 1px solid #e9ecef;
        height: 100%;
    }

    .info-section-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: #0056b3;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 3px solid #ffd700;
        font-family: 'Space Grotesk', sans-serif;
    }

    .contact-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 2rem;
        padding: 1.5rem;
        border-radius: 10px;
        background: #f8f9fa;
        transition: all 0.3s ease;
    }

        .contact-item:hover {
            background: #e6f2ff;
            transform: translateX(5px);
        }

    .contact-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #0056b3, #003d82);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1.5rem;
        flex-shrink: 0;
    }

        .contact-icon i {
            color: white;
            font-size: 1.2rem;
        }

    .contact-details h4 {
        font-size: 1.1rem;
        font-weight: 600;
        color: #0056b3;
        margin-bottom: 0.5rem;
    }

    .contact-details p {
        color: #333;
        margin: 0;
        line-height: 1.5;
    }

    .form-label {
        font-weight: 600;
        color: #0056b3;
        margin-bottom: 0.5rem;
        font-size: 1rem;
    }

    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 12px 15px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #0056b3;
            box-shadow: 0 0 0 0.2rem rgba(0, 86, 179, 0.25);
        }

    .btn-submit {
        background: linear-gradient(135deg, #0056b3, #003d82);
        color: white;
        padding: 12px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        transition: all 0.3s ease;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(0, 86, 179, 0.3);
            background: linear-gradient(135deg, #003d82, #0056b3);
        }

        .btn-submit:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

    /* Success Modal Styles */
    .success-modal {
        border-radius: 20px;
        border: none;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .success-icon {
        font-size: 4rem;
        color: #28a745;
        margin-bottom: 1.5rem;
        animation: bounceIn 0.6s ease-out;
    }

    .success-title {
        color: #0056b3;
        font-weight: 700;
        margin-bottom: 1rem;
        font-size: 1.8rem;
    }

    .success-message {
        color: #666;
        margin-bottom: 1.5rem;
        line-height: 1.6;
        font-size: 1.1rem;
    }

    .success-email-note {
        color: #0056b3;
        font-weight: 600;
        margin-bottom: 2rem;
        font-size: 1rem;
    }

    .btn-success-btn {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        padding: 12px 40px;
        font-size: 1.1rem;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-success-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(40, 167, 69, 0.3);
        }

    /* Animation */
    @@keyframes bounceIn {
        0% {
            opacity: 0;
            transform: scale(0.3);
        }

        50% {
            opacity: 1;
            transform: scale(1.05);
        }

        70% {
            transform: scale(0.9);
        }

        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .contact-title {
            font-size: 2.2rem;
        }

        .contact-info-card,
        .contact-form-card {
            padding: 2rem;
        }

        .contact-item {
            flex-direction: column;
            text-align: center;
        }

        .contact-icon {
            margin-right: 0;
            margin-bottom: 1rem;
        }

        .success-icon {
            font-size: 3rem;
        }

        .success-title {
            font-size: 1.5rem;
        }
    }
</style>

