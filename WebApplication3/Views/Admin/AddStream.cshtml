@model WebApplication3.Models.Stream
@{
    ViewBag.Title = "Add Stream";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="bg-light p-5 rounded shadow">
                <h2 class="text-primary text-center mb-4">Add New Stream</h2>

                @* Success message block *@
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="success-alert" class="alert alert-success text-center" role="alert">
                        @TempData["SuccessMessage"]
                    </div>

                    <script>
                        setTimeout(function () {
                            var alert = document.getElementById('success-alert');
                            if (alert) {
                                alert.style.transition = "opacity 0.5s ease-out";
                                alert.style.opacity = "0";
                                setTimeout(function () {
                                    alert.remove();
                                }, 500);
                            }
                        }, 3000);
                    </script>
                }

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3 text-center" })

                    <div class="mb-3">
                        @Html.LabelFor(model => model.Name, new { @class = "form-label text-primary" })
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "e.g. Science, Commerce" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="text-center mt-4">
                        <input type="submit" value="Create Stream" class="btn btn-primary btn-lg" />
                    </div>
                    <div class="text-center mt-3">
                        @Html.ActionLink("← Back to Admin Dashboard", "Dashboard", "Admin", null, new { @class = "btn btn-outline-secondary btn-sm" })
                    </div>

                }
            </div>
        </div>
    </div>
</div>
