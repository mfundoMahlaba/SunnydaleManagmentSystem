@model IEnumerable<WebApplication3.Models.UniformItem>
@{
    ViewBag.Title = "Uniform Shop";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Uniform Shop</h2>
    <a href="@Url.Action("ViewCart", "Uniform")" class="btn btn-outline-primary">
        🛒 View Cart
        @if (ViewBag.CartCount != null && ViewBag.CartCount > 0)
        {
            <span class="badge badge-pill badge-danger ml-1">@ViewBag.CartCount</span>
        }
    </a>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <img src="@Url.Content(item.ImagePath ?? "~/Content/img/no-image.png")"
                     class="card-img-top"
                     alt="@item.Name"
                     style="height:220px; object-fit:cover;" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>

                    <p class="card-text mb-1">
                        <strong>Price:</strong> <span class="text-success">@item.Price.ToString("C")</span>
                    </p>

                    <p class="card-text">
                        <small class="text-muted">Stock: @item.Stock</small>
                    </p>

                    <div class="mt-auto">
                        @if (item.Stock > 0)
                        {
                            using (Html.BeginForm("AddToCart", "Uniform", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", item.Id)

                                <div class="mb-2">
                                    <select name="size" class="form-control form-control-sm" style="max-width:120px;">
                                        <option value="S">Small (S)</option>
                                        <option value="M">Medium (M)</option>
                                        <option value="L">Large (L)</option>
                                    </select>
                                </div>

                                <div class="input-group">
                                    <input type="number" name="quantity" value="1" min="1" max="@item.Stock"
                                           class="form-control form-control-sm"
                                           style="max-width:80px;" />
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            Add to Cart
                                        </button>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-sm" disabled>Out of Stock</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
