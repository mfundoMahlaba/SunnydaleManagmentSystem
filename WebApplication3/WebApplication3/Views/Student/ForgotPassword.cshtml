@model WebApplication3.ViewModels.ForgotPasswordViewModel

@{
    ViewBag.Title = "Student Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="bg-light p-4 rounded shadow">
                <h2 class="text-center text-primary mb-4">🔐 Forgot Your Password?</h2>

                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @using (Html.BeginForm("ForgotPassword", "Student", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email", aria_describedby = "emailHelp" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-envelope me-2"></i>Send Reset Link
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
