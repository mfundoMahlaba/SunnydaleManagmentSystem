@{
    ViewBag.Title = "Upload Documents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">📤 Upload Documents</h4>
        </div>

        <div class="card-body">
            <div class="mb-3 text-end">
                <a href="@Url.Action("DocumentOverview", "Student")" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-folder2-open"></i> View My Documents
                </a>
            </div>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">@TempData["Message"]</div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            @using (Html.BeginForm("UploadDocuments", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="mb-3">
                    <label for="reportDocument" class="form-label fw-semibold">Upload Report (PDF)</label>
                    <input type="file" name="reportDocument" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="idDocument" class="form-label fw-semibold">Upload ID Document / Birth Certificate (PDF)</label>
                    <input type="file" name="idDocument" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Upload</button>
            }

            <div class="mb-3 text-end">
                <a href="@Url.Action("Dashboard", "Student")" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-house-door"></i> Back to Dashboard
                </a>
            </div>

        </div>
    </div>
</div>
