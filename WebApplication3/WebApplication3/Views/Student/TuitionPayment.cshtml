@model WebApplication3.ViewModels.TuitionPaymentViewModel

@{
    ViewBag.Title = "Tuition Payment";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-graduation-cap me-2"></i>Tuition Payment
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Payment Form -->
                    <div class="row">
                        <div class="col-md-6">
                            <h5>Student Information</h5>
                            <div class="mb-3">
                                <label class="form-label"><strong>Full Name:</strong></label>
                                <p>@Model.FullName</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"><strong>Student ID:</strong></label>
                                <p>@Model.StudentId</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5>Payment Details</h5>
                            <div class="alert alert-info">
                                <h6 class="alert-heading">Tuition Fee</h6>
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <span>Amount Due:</span>
                                    <strong>R@(Model.Amount.ToString("N2"))</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <form id="payment-form" method="post">
                            @Html.AntiForgeryToken()

                            <button type="submit" id="pay-button" class="btn btn-success btn-lg py-3 px-5">
                                <i class="fas fa-credit-card me-2"></i>Pay R@(Model.Amount.ToString("N2")) Now
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#payment-form').on('submit', function (e) {
                e.preventDefault();

                var $button = $('#pay-button');
                $button.prop('disabled', true);
                $button.html('<i class="fas fa-spinner fa-spin me-2"></i>Processing...');

                $.ajax({
                    url: '@Url.Action("ProcessTuitionPayment", "Student")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            window.location.href = response.url;
                        } else {
                            alert('Error: ' + response.message);
                            $button.prop('disabled', false);
                            $button.html('<i class="fas fa-credit-card me-2"></i>Pay R@(Model.Amount.ToString("N2")) Now');
                        }
                    },
                    error: function () {
                        alert('Error processing payment. Please try again.');
                        $button.prop('disabled', false);
                        $button.html('<i class="fas fa-credit-card me-2"></i>Pay R@(Model.Amount.ToString("N2")) Now');
                    }
                });
            });
        });
    </script>
}