@model WebApplication3.ViewModels.ParentResetPasswordViewModel

@{
    ViewBag.Title = "Parent Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="bg-light p-4 rounded shadow">
                <h2 class="text-center text-primary mb-4">🔑 Reset Your Password</h2>

                @using (Html.BeginForm("ResetPassword", "Parent", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Token)

                    <div class="mb-3">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "form-label fw-semibold" })
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "New password" })
                        @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger small" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label fw-semibold" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check-circle me-2"></i>Reset Password
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
