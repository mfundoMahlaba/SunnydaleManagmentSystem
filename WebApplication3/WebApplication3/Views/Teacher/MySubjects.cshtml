@model List<WebApplication3.ViewModels.TeacherSubjectDashboardViewModel>

@{
    ViewBag.Title = "My Subjects";
}

<style>
    h3 {
        font-weight: 700;
        color: #212529;
    }

    .card-header {
        font-size: 1rem;
        font-weight: 600;
    }

    .table th, .table td {
        vertical-align: middle;
        font-size: 0.95rem;
    }

        .table td.actions {
            width: 180px;
            white-space: nowrap;
        }

    .btn-sm {
        font-size: 0.85rem;
        padding: 0.35rem 0.75rem;
        border-radius: 0.3rem;
    }

    .alert {
        font-size: 0.95rem;
        border-radius: 0.375rem;
        padding: 0.75rem 1rem;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
        text-align: center;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 0.5rem;
    }

    .gap-2 > * {
        margin-right: 0.5rem;
    }

    .container {
        padding-bottom: 2rem;
    }

    .form-label {
        font-weight: 600;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0 text-dark">📚 My Assigned Subjects</h3>
        <a href="@Url.Action("Dashboard", "Teacher")" class="btn btn-outline-secondary">
            <i class="fas fa-home me-1"></i> Back to Dashboard
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form method="get" action="@Url.Action("MySubjects", "Teacher")" class="row g-3 mb-4">
        <div class="col-md-3">
            <label class="form-label">Subject</label>
            <select name="subjectName" class="form-select">
                <option value="">Assigned Subjects</option>
                @foreach (var subject in ViewBag.SubjectOptions as List<string>)
                {
                    <option value="@subject">@subject</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Grade</label>
            <select name="gradeName" class="form-select">
                <option value="">All Grades Assigned To</option>
                @foreach (var grade in ViewBag.GradeOptions as List<string>)
                {
                    <option value="@grade">@grade</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Student Name</label>
            <input type="text" name="studentName" class="form-control" placeholder="e.g. Mfundo Mahlaba" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Student ID</label>
            <input type="number" name="studentId" class="form-control" placeholder="e.g. 10234" />
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-filter me-1"></i> Apply Filters
            </button>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You have no assigned subjects yet.</div>
    }
    else
    {
        foreach (var subject in Model)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <strong>@subject.SubjectCode - @subject.SubjectName</strong> | Grade: @subject.GradeName
                </div>
                <div class="card-body p-0">
                    <table class="table table-bordered table-striped mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Student</th>
                                <th>Student ID</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in subject.Students)
                            {
                                <tr>
                                    <td>@student.StudentName</td>
                                    <td>@student.StudentId</td>
                                    <td class="actions text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="@Url.Action("CaptureMarks", "Teacher", new { studentId = student.StudentId, assignmentId = subject.AssignmentId })"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-pen me-1"></i> Capture
                                            </a>
                                            <a href="@Url.Action("EditMark", "Teacher", new { studentId = student.StudentId, assignmentId = subject.AssignmentId })"
                                               class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
</div>
