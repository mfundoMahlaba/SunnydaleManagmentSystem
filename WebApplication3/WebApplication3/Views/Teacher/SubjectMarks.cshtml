@model List<WebApplication3.ViewModels.TeacherSubjectMarkViewModel>

@{
    ViewBag.Title = "My Subject Marks";
}

<style>
    h3 {
        font-weight: 700;
        color: #212529;
    }

    .card-header {
        font-size: 1rem;
        font-weight: 600;
    }

    .table th, .table td {
        vertical-align: middle;
        font-size: 0.95rem;
        text-align: center;
    }

    .thead-dark th {
        background-color: #343a40;
        color: #fff;
    }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 0.5rem;
    }

    .alert {
        font-size: 0.95rem;
        border-radius: 0.375rem;
        padding: 0.75rem 1rem;
    }

    .container {
        padding-bottom: 2rem;
    }

    .form-label {
        font-weight: 600;
    }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0 text-dark fw-bold">📊 My Subject Marks</h3>
        <a href="@Url.Action("Dashboard", "Teacher")" class="btn btn-outline-secondary">
            <i class="fas fa-home me-1"></i> Back to Dashboard
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form method="get" action="@Url.Action("SubjectMarks", "Teacher")" class="row g-3 mb-4">
        <div class="col-md-3">
            <label class="form-label">Subject</label>
            <input type="text" name="subjectName" class="form-control" placeholder="e.g. Mathematics" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Term</label>
            <select name="term" class="form-select">
                <option value="">All Terms</option>
                <option value="Term 1">Term 1</option>
                <option value="Term 2">Term 2</option>
                <option value="Term 3">Term 3</option>
                <option value="Term 4">Term 4</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Assessment Type</label>
            <select name="assessmentType" class="form-select">
                <option value="">All Types</option>
                <option value="Test">Test</option>
                <option value="Exam">Exam</option>
                <option value="Assignment">Assignment</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Student Name</label>
            <input type="text" name="studentName" class="form-control" placeholder="e.g. Mfundo Mahlaba" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Student ID</label>
            <input type="number" name="studentId" class="form-control" placeholder="e.g. 10234" />
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-filter me-1"></i> Apply Filters
            </button>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No marks captured yet for your assigned subjects.</div>
    }
    else
    {
        foreach (var subject in Model)
        {
            <div class="card mb-4 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <strong>@subject.SubjectName</strong> | Grade: @subject.GradeName
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Student</th>
                                    <th>Term</th>
                                    <th>Assessment Type</th>
                                    <th>Mark</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in subject.Students)
                                {
                                    <tr>
                                        <td>@student.StudentName (@student.StudentId)</td>
                                        <td>@student.Term</td>
                                        <td>@student.AssessmentType</td>
                                        <td>@student.Mark</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
</div>
