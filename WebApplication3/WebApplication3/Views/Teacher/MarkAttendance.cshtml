@model WebApplication3.ViewModels.AttendanceRegisterViewModel
@{
    ViewBag.Title = "Mark Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-dark fw-bold">📝 Mark Attendance</h4>
            <a href="@Url.Action("Dashboard", "Teacher")" class="btn btn-outline-secondary">
                <i class="fas fa-home me-1"></i> Back to Dashboard
            </a>
        </div>
        <div class="card-body">

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="mb-3">
                <strong>Marked By:</strong> @ViewBag.TeacherName (@ViewBag.TeacherId)
            </div>

            @using (Html.BeginForm("MarkAttendance", "Teacher", FormMethod.Post, new { id = "attendanceForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="row mb-4">
                    <div class="col-md-3">
                        @Html.LabelFor(m => m.Date, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    </div>

                    <div class="col-md-3">
                        @Html.LabelFor(m => m.GradeId, new { @class = "form-label" })
                        @Html.DropDownListFor(m => m.GradeId, Model.GradeOptions, "-- Select Grade --", new { @class = "form-select", id = "GradeId" })
                        @Html.ValidationMessageFor(m => m.GradeId, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-3">
                        @Html.Label("Subject", new { @class = "form-label" })
                        @Html.DropDownList("SubjectId", new SelectList(ViewBag.Subjects, "Value", "Text"), "-- Select Subject --", new { @class = "form-select searchable-subject", id = "SubjectId" })
                        @Html.ValidationMessage("SubjectId", "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-3">
                        @Html.Label("Period", new { @class = "form-label" })
                        @Html.DropDownList("PeriodId", new SelectList(ViewBag.Periods, "Value", "Text"), "-- Select Period --", new { @class = "form-select" })
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-bordered table-striped align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Student Name</th>
                                <th class="text-center">Present</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Entries.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Html.HiddenFor(m => m.Entries[i].StudentId)
                                        @Model.Entries[i].StudentName
                                    </td>
                                    <td class="text-center">
                                        @Html.CheckBoxFor(m => m.Entries[i].IsPresent)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(m => m.Entries[i].Remarks, new { @class = "form-control", placeholder = "Optional" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <button type="submit" class="btn btn-primary mt-3">
                    <i class="fas fa-check-circle me-1"></i> Save Attendance
                </button>
            }
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        $('.searchable-subject').select2({
            placeholder: "Search subject...",
            allowClear: true,
            width: '100%'
        });

        $('#attendanceForm').submit(function (e) {
            const grade = $('#GradeId').val();
            const subject = $('#SubjectId').val();

            if (!grade || !subject) {
                alert("Please select both Grade and Subject before submitting.");
                e.preventDefault();
            }
        });
    });
</script>
